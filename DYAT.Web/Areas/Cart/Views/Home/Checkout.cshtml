@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Оформление заказа";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Подтверждение заказа</h3>
                </div>
                <div class="card-body text-center">
                    <form asp-action="CheckoutConfirm" method="post">
                        @Html.AntiForgeryToken()
                        <p>Вы уверены, что хотите оформить заказ и оплатить его с баланса?</p>
                        <button type="submit" class="btn btn-success">Оформить заказ</button>
                        <a href="@Url.Action("Index", "Home", new { area = "Cart" })" class="btn btn-secondary ms-2">Отмена</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 