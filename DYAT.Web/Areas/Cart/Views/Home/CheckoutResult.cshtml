@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Результат заказа";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Результат оформления заказа</h3>
                </div>
                <div class="card-body text-center">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">@ViewBag.Message</div>
                        <a href="@Url.Action("Index", "Home", new { area = "Shop" })" class="btn btn-primary">В магазин</a>
                    }
                    else if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                        <a href="@Url.Action("Index", "Home", new { area = "Cart" })" class="btn btn-secondary">Вернуться в корзину</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 